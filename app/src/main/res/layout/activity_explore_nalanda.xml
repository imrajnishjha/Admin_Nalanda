<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/different_white"
    android:fillViewport="true"
    tools:context=".ExploreNalanda">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/explore_bed_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/nalanda_bed_logo"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/explore_nalanda_logo"
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:src="@drawable/nalanda_logo"
            app:layout_constraintEnd_toStartOf="@+id/explore_title1"
            app:layout_constraintTop_toBottomOf="@id/explore_bed_logo" />

        <TextView
            android:id="@+id/explore_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/inter_medium"
            android:gravity="bottom|start"
            android:text="@string/nalanda_name"
            android:textColor="@color/different_black"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/explore_nalanda_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/explore_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/inter_medium"
            android:gravity="top|start"
            android:text="Living"
            android:textColor="@color/different_black"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@id/explore_title1"
            app:layout_constraintTop_toBottomOf="@id/explore_title1" />

        <TextView
            android:id="@+id/explore_welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:text="Welcome to happiness"
            android:textColor="@color/different_black"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/explore_title2" />

        <TextView
            android:id="@+id/explore_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:justificationMode="inter_word"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="@string/explore_text"
            android:textColor="#7a7a7a"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/explore_welcome_text"
            tools:targetApi="o" />

        <TextView
            android:id="@+id/explore_null_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/explore_login_btn"
            app:layout_constraintTop_toBottomOf="@id/explore_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/explore_login_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/curverectangle2"
            android:backgroundTint="#2F3A70"
            android:fontFamily="@font/poppins_regular"
            android:text="Login as Existing User..."
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/explore_null_text"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>