<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gamingRoomCV"
    app:cardCornerRadius="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="2dp"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/highlight_item_remove_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="#2D6BC8"
        app:contentPaddingLeft="8dp"
        app:contentPaddingRight="8dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/remove_icon"
                android:importantForAccessibility="no"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/highlight_item_remove_edit_btn_txt"
                android:text="Remove"
                android:layout_gravity="center"
                android:paddingStart="6dp"
                android:paddingEnd="7dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/highlight_purl_popup"
        android:src="@drawable/gaminghouse"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/highlight_linkName_popup"
            android:textColor="@color/different_black"
            android:fontFamily="@font/poppins_regular"
            android:textSize="10sp"
            android:paddingStart="18dp"
            android:gravity="center"
            android:paddingEnd="18dp"
            android:paddingTop="4dp"
            android:paddingBottom="3dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="35dp"
            android:text="@string/book_now"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/highlight_title_popup"
            android:textSize="18sp"
            android:elevation="5dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="@color/different_white"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/gaming_room"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/highlight_tagline_popup"
            android:textSize="10sp"
            android:elevation="5dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="@color/different_white"
            android:layout_marginStart="50dp"
            android:text="Reserve your Seat Now"/>


    </LinearLayout>



</androidx.cardview.widget.CardView>