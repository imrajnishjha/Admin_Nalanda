<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/hostel_item_Iv"
        android:src="@drawable/chanakya_hostel"
        android:layout_marginTop="25dp"
        android:padding="3dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/hostel_item_edit"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/different_white"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toTopOf="@id/hostel_item_Iv"
        app:layout_constraintEnd_toEndOf="@id/hostel_item_Iv">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/editdate"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/hostel_item_name"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:text="Chanakaya"
        android:fontFamily="@font/poppins_semi_bold"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/hostel_item_Iv"
        app:layout_constraintBottom_toBottomOf="@id/hostel_item_Iv"
        app:layout_constraintStart_toStartOf="@id/hostel_item_Iv"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/location_icon"
        android:id="@+id/hostel_item_location_icon"
        app:layout_constraintStart_toStartOf="@id/hostel_item_name"
        app:layout_constraintTop_toBottomOf="@id/hostel_item_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/hostel_item_location"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_regular"
        android:text="Near Interglobe college, Greater Noida"
        android:layout_marginStart="7dp"
        app:layout_constraintStart_toEndOf="@id/hostel_item_location_icon"
        app:layout_constraintTop_toTopOf="@id/hostel_item_location_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>