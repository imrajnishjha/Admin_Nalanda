<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="230dp"
android:layout_height="191dp"
app:cardCornerRadius="18dp"
xmlns:app="http://schemas.android.com/apk/res-auto"
app:cardBackgroundColor="#1E212B">

<LinearLayout
    android:layout_width="230dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/infoTV"
        android:backgroundTint="@color/white"
        android:hint="Enter Room No"
        android:textSize="16sp"
        android:gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:layout_gravity="center"
        android:textColorHint="@color/black"
        android:layout_marginTop="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/no_border_curve"
        android:textColor="@color/black"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/infoEdt"
        android:backgroundTint="@color/white"
        android:hint="Type Here"
        android:textSize="16sp"
        android:gravity="center"
        android:inputType="phone"
        android:fontFamily="@font/poppins_regular"
        android:layout_gravity="center"
        android:textColorHint="@color/black"
        android:layout_marginTop="20dp"
        android:paddingTop="6dp"
        android:paddingBottom="3dp"
        android:background="@drawable/no_border_curve"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/infoSubmitBtn"
        android:backgroundTint="#21B14A"
        android:text="Submit"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:fontFamily="@font/poppins_semi_bold"
        android:layout_gravity="center"
        android:textColorHint="@color/black"
        android:layout_marginTop="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/no_border_curve"
        android:textColor="@color/black"
        tools:ignore="HardcodedText" />

</LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reg_upload_progressBarRL"
        android:padding="10dp"
        android:visibility="gone"
        android:background="@drawable/circular_progress_bar"
        android:elevation="8dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ProgressBar
            android:layout_width="30dp"
            android:layout_centerInParent="true"
            android:layout_height="30dp"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>